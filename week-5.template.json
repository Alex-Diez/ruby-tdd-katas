{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "UserEmail": {
      "Type": "String",
      "Description": "User email for notifications"
    }
  },
  "Resources": {
    "Client": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "InstanceType": "t2.micro",
        "ImageId": "ami-b70554c8",
        "KeyName": "Alex-EC2-S3",
        "SecurityGroups": [ { "Ref": "SshAccess" } ],
        "IamInstanceProfile": { "Ref": "AccessToQueueProfile" }
      }
    },
    "SshAccess": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Provide SSH to EC2",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "AccessToQueueProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Roles": [ { "Ref": "Actor" } ]
      }
    },
    "Actor": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [ "sts:AssumeRole" ],
              "Effect": "Allow",
              "Principal": { "Service": [ "ec2.amazonaws.com" ] }
            }
          ]
        },
        "Policies": [
          {
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "AccessToQueue",
                  "Effect": "Allow",
                  "Action": [
                    "sqs:SendMessage",
                    "sqs:ReceiveMessage",
                    "sns:Publish"
                  ],
                  "Resource": "*"
                }
              ]
            },
            "PolicyName": "QueuePolicy"
          }
        ]
      }
    },
    "MessageQueue": {
      "Type": "AWS::SQS::Queue",
      "Properties": { }
    },
    "Notifications": {
      "Type": "AWS::SNS::Subscription",
      "Properties": {
        "Endpoint": { "Ref": "UserEmail" },
        "Protocol": "email",
        "TopicArn": { "Ref": "Topic" }
      }
    },
    "Topic": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
      }
    }
  },
  "Outputs": {
    "QueueURL": {
      "Description": "URL of created SQS Queue",
      "Value": { "Ref": "MessageQueue" }
    },
    "TopicARN": {
      "Description": "ARN of created SNS Topic",
      "Value": { "Ref": "Topic" }
    }
  }
}
